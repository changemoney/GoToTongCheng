<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lly_main_helpmebuy_shoppinglist_content_piper_card_item_rv_item_total"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="vertical"

    >
    <gototongcheng.zhyan.com.library.Widget.SwipeLayout.SwipeLayout
        android:id="@+id/as_main_helpmebuy_shoppinglist_content_piper_card_item_rv_item_cehua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:clickToClose="true"
        >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/activity_main_helpmebuy_shoppinglist_content_item_margin_left_right_size"
                    android:layout_marginRight="@dimen/activity_main_helpmebuy_shoppinglist_content_item_margin_left_right_size"
                    >
                    <RelativeLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="2"

                        >
                        <TextView
                            android:id="@+id/tv_main_helpmebuy_shoppinglist_content_piper_card_item_rv_item_goodsname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv_main_helpmebuy_shoppinglist_content_piper_card_item_rv_item_goodsnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv_main_helpmebuy_shoppinglist_content_piper_card_item_rv_item_goodsprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_main_helpmebuy_shoppinglist_content_piper_card_item_rv_item_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/activity_main_helpmebuy_shoppinglist_red_delete_bg_radius"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/color_activity_main_helpmebuy_shoppinglist_content_white_bg"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

</gototongcheng.zhyan.com.library.Widget.SwipeLayout.SwipeLayout>
</LinearLayout>