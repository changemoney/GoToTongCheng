<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/activity_main_fragment_four_item_word_size"
        android:textColor="@color/color_activity_main_fragment_fouritem_lightblack_word"
        android:text="@string/activity_main_fragment_service_item"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_main_fragment_service_item_margin_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/color_activity_main_fragment_fouritem_black_bg"
        android:paddingLeft="@dimen/activity_main_fragment_four_item_linear_padding_left_right_top_size"
        android:paddingRight="@dimen/activity_main_fragment_four_item_linear_padding_left_right_top_size"
        android:paddingTop="@dimen/activity_main_fragment_four_item_linear_padding_left_right_top_size"
        android:paddingBottom="@dimen/activity_main_fragment_four_item_linear_padding_bottom_size"
        >
        <RelativeLayout
            android:id="@+id/rly_main_content_helpmebuy"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_fragment_four_item_content_white_radius"
            android:layout_marginRight="@dimen/activity_main_fragment_four_item_each_other_margin_size"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/activity_main_fragment_help_me_buy"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_main_content_helpmesend"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_fragment_four_item_content_white_radius"
            android:layout_marginLeft="@dimen/activity_main_fragment_four_item_each_other_margin_size"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/activity_main_fragment_help_me_song"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/color_activity_main_fragment_fouritem_black_bg"
        android:paddingLeft="@dimen/activity_main_fragment_four_item_linear_padding_left_right_top_size"
        android:paddingRight="@dimen/activity_main_fragment_four_item_linear_padding_left_right_top_size"
        android:paddingBottom="@dimen/activity_main_fragment_four_item_linear_padding_left_right_top_size"
        android:paddingTop="@dimen/activity_main_fragment_four_item_linear_padding_bottom_size"
        >
        <RelativeLayout
            android:id="@+id/rly_main_content_reminder"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_fragment_four_item_content_white_radius"
            android:layout_marginRight="@dimen/activity_main_fragment_four_item_each_other_margin_size"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/activity_main_fragment_wo_yao_cui_dan"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_main_content_suggest"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_fragment_four_item_content_white_radius"
            android:layout_marginLeft="@dimen/activity_main_fragment_four_item_each_other_margin_size"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/activity_main_fragment_zi_xun_jian_yi"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>