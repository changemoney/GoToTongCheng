<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/activity_main_helpmebuy_shoppinglist_topbar_height"
    android:background="@color/transparent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:id="@+id/activity_activity_topbar_lly"
    >
    <RelativeLayout
        android:id="@+id/rly_main_helpmebuy_shoppinglist_topbar_leftmenu"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/iv_activity_activity_topbar_leftmenu"
            android:layout_width="@dimen/activity_main_helpmebuy_shoppinglist_topbar_leftmenu_width"
            android:layout_height="@dimen/activity_main_helpmebuy_shoppinglist_topbar_leftmenu_height"
            android:background="@drawable/topbar_green_return_arrow"
            android:layout_centerInParent="true"

            android:layout_marginLeft="@dimen/activity_main_helpmebuy_shoppinglist_topbar_title_margin_size"
            />
    </RelativeLayout>
    <!--
        style="@style/main_activity_topbar_title_text_style"
        android:text="@string/main_activity_topbar_title"-->
    <!--标题-->
    <RelativeLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="4"
        >
        <TextView
            android:id="@+id/tv_activity_activity_topbar_title"
            android:layout_width="@dimen/activity_main_helpmebuy_shoppinglist_topbar_center_title_width"
            android:layout_height="@dimen/activity_main_helpmebuy_shoppinglist_topbar_center_title_height"
            android:background="@drawable/activity_main_helpmebuy_shoppinglist"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <!--标题-->
    <RelativeLayout
        android:id="@+id/rly_main_helpmebuy_shoppinglist_topbar_rightmenu"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/query"
            android:textColor="@color/color_activity_main_helpmebuy_shoppinglist_topbar_green_word_bg"
            android:textSize="13sp"
            />
    </RelativeLayout>
</LinearLayout>