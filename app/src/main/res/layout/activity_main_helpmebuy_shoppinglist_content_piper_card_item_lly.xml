        android:layout_weight="1"
        >
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
                <ImageView
                    android:layout_width="@dimen/activity_main_helpmebuy_shoppinglist_head_ico_img_width"
                    android:layout_height="@dimen/activity_main_helpmebuy_shoppinglist_head_ico_img_height"
