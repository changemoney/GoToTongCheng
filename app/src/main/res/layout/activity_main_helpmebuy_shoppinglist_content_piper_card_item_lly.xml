                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    >

                    <TextView
                        android:id="@+id/tv_shoppinglist_content_piper_card_item_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/payBySmallTicket"
                        android:textColor="@color/color_activity_main_helpmebuy_shoppinglist_content_shopping_by_tickets_red_bg"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >
                    <ImageView
                        android:layout_width="@dimen/activity_main_helpmebuy_shoppinglist_content_lastitem_priceselect_width"
                        android:layout_height="@dimen/activity_main_helpmebuy_shoppinglist_content_lastitem_priceselect_height"
                        android:background="@drawable/activity_main_helpmebuy_shoppinglist_pricselected"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/activity_main_helpmebuy_shoppinglist_content_lastitem_goodsprice_margin_right"
                        android:visibility="gone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unknowPrice"
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="@color/color_activity_main_helpmebuy_shoppinglist_content_buyaddress_gray_bg"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

            </LinearLayout>
            <!--凭购物小票。。。价格未知-->
